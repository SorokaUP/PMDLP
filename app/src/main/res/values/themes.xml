<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PMDLP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#388e3c</item>
        <item name="colorPrimaryVariant">#6abf69</item>
        <item name="colorOnPrimary">#00600f</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00600f</item>
        <item name="colorSecondaryVariant">#6abf69</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.PMDLP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PMDLP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PMDLP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>